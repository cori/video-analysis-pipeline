{
  "tasks": {
    "test": "deno test --allow-all",
    "test:watch": "deno test --allow-all --watch",
    "dev": "deno run --allow-all --watch main.ts",
    "check": "deno check **/*.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true
  }
}
